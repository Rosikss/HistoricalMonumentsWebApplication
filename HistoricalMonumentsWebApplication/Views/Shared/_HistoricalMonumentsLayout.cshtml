@{
}

@{
    List<string> cityNames = ViewBag.Cities;
    List<string> classificationNames = ViewBag.Classifications;
}

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8"/>
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>@ViewData["Title"]</title>
  @await Html.PartialAsync("_Favicons")
  <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
  <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
  <link rel="stylesheet" href="~/HistoricalMonumentsWebApplication.styles.css" asp-append-version="true"/>
</head>
<body>
<header>
  <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-dark border-bottom box-shadow mb-3 fixed-top">
    <div class="container-fluid">
      <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
        <img src="~/phostos/coliseum (1).png" title="historical icons" alt="logo" class="logo"/>
      </a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
              aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between ">
        <ul class="navbar-nav flex-grow-1">
          <li class="nav-item">
            <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Index">Головна</a>
          </li>
          <li class="nav-item">
            <a class="nav-link text-light" asp-area="" asp-controller="HistoricalMonumentsFilter" asp-action="Index">Історичні пам'ятки</a>
          </li>

        </ul>
      </div>
      <div class="my-2 my-lg-0">
        <ul>
          <li class="nav-item">
            <a class="nav-link text-light" asp-area="" asp-controller="Architects" asp-action="Index">Адмін</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>
</header>
    <div class="container-fluid filters-nav">
        <div class="row">
            <nav>
                <div class="align-content-center">
                    <ul class="nav flex-row justify-content-center">
                        <li class="nav-item dropdown">
                            <button class="nav-link dropdown-toggle">Міста</button>
                            <div class="dropdown-options row">
                                @foreach (var cityName in cityNames)
                                {
                                    <a href="~/historical-monuments/city?page=1&categoryOption=@cityName" class="col">@cityName</a>
                                }
                            </div>
                        </li>
                        <li class="nav-item dropdown">
                            <button class="nav-link dropdown-toggle">Категорії</button>
                            <div class="dropdown-options row">
                                @foreach (var classificationName in classificationNames)
                                {
                                    <a href="~/historical-monuments/classification?page=1&categoryOption=@classificationName" class="col">@classificationName</a>
                                }
                            </div>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="~/historical-monuments">
                                Скинути
                            </a>
                        </li>
                    </ul>
                </div>
            </nav>
        </div>
    </div>
<div class="container navbar-height">
  <main role="main" class="pb-3 ">
    @RenderBody()
  </main>
</div>

<footer b-1z950dal8v="" class="border-top footer text-muted">
    <div b-1z950dal8v="" class="container">
        © 2024 - HistoricalMonumentsWebApplication - <a href="/Home/Privacy">Privacy</a>
    </div>
</footer>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", false)
</body>
</html>